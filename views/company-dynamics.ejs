<!DOCTYPE HTML>
<html>
<head>
    <title>Features</title>
    <!-- Bootstrap -->
    <link href="/static/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <link href="/static/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="/static/css/blue.css" rel="stylesheet" type="text/css" media="all" />
    <!----font-Awesome----->
    <link rel="stylesheet" href="fonts/css/font-awesome.min.css">
    <!----font-Awesome----->
    <!-- start plugins -->
    <script type="text/javascript" src="/static/js/jquery.min.js"></script>
    <script src="/static/js/menu.js" type="text/javascript"></script>
</head>
<body>
<% include common/header %>
<div class="main_bg"><!-- start main -->
    <div class="container">
        <div class="main_grid1">
            <h3 class="style pull-left">公司动态</h3>
            <ol class="breadcrumb pull-right">
                <li><a href="index.html">首页</a></li>
                <li class="active">关于我们</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="main_btm1"><!-- start main_btm -->
    <div class="container">
        <div class="technology">
            <div class="technology_main">
                <% postList.forEach(function (item) { %>
                    <div class="technology_list col-md-6">
                        <h4><%= item.title %><p class="h5"><%= item.time %></p></h4>
                        <div class="tech_para">
                            <p class="para"><%= item.intro %></p>
                        </div>
                        <div class="/static//static//static/images_1_of_4 bg1 pull-right">
                            <img src="/wordpress/wp-content/uploads/2017/12/blog_pic2.jpg">
                        </div>
                        <div class="clearfix"></div>
                        <div class="read_btn">
                            <a href="/posts/details/<%= item.id %>" class="btn">查看详情</a>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="clearfix"></div>
            <ul class="pagination">
                <% if (currentPage > 1) { %>
                    <li><a href="/company-dynamics/<%= currentPage - 1 %>">&laquo;</a></li>
                <% } %>
                <% for(var i=1; i<= pagination; i++) { %>
                    <li><a href="/company-dynamics/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (currentPage < pagination) { %>
                    <li><a href="/company-dynamics/<%= currentPage + 1 %>">&raquo;</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</div>
<% include common/footer %>
