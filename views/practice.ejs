<% include common/head.ejs %>
<% include common/header.ejs %>
<div class="main_bg"><!-- start main -->
    <div class="container">
        <div class="main_grid1">
            <h3 class="style pull-left">料理方法</h3>
            <ol class="breadcrumb pull-right">
                <li><a href="/">首页</a></li>
                <li class="active">料理方法</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="main_btm1"><!-- start main_btm -->
    <div class="container">
        <div class="technology">
            <% postList.forEach(function (item) { %>
                <div class="technology_list col-md-6">
                    <h4>
                        <%= item.title %>
                        <p class="h5"><%= item.time %></p>
                    </h4>
                    <div class="tech_para">
                        <p class="para"><%= item.intro %></p>
                    </div>
                    <div class="clearfix"></div>
                    <div class="read_btn">
                        <a href="/content/<%= item.id %>" class="btn">查看详情</a>
                    </div>
                </div>
            <% }) %>
            <div class="clearfix"></div>
            <% include components/pagination.ejs %>
        </div>
    </div>
    <style>
        .technology_list {
            margin-top: 20px;
        }
        .tech_para {
            height: 150px;
        }
    </style>
</div>
<% include common/footer %>
