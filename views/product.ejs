<% include common/head.ejs %>
<% include common/header.ejs %>
<div class="main_bg"><!-- start main -->
    <div class="container">
        <div class="main_grid1">
            <h3 class="style pull-left">产品中心</h3>
            <ol class="breadcrumb pull-right">
                <li><a href="/">首页</a></li>
                <li class="active">产品中心</li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="main_btm1"><!-- start main_btm -->
    <div class="container">
        <div class="portfolio_main">
            <dl id="pro0">
                <dt>高级产品</dt>
                <% productList.forEach(function (item) { %>
                    <% if(item.type == '高级产品') { %>
                        <dd>
                            <div class="product-content">
                                <div style="background-image: url('<%= item.cover %>')"></div>
                                <P><%= item.title %></P>
                            </div>
                        </dd>
                    <% } %>
                <% }) %>
            </dl>
            <dl id="pro1">
                <dt>人气产品</dt>
                <% productList.forEach(function (item) { %>
                <% if(item.type == '人气产品') { %>
                <dd>
                    <div class="product-content">
                        <div style="background-image: url('<%= item.cover %>')"></div>
                        <P><%= item.title %></P>
                    </div>
                </dd>
                <% } %>
                <% }) %>
            </dl>
            <dl id="pro2">
                <dt>主题产品</dt>
                <% productList.forEach(function (item) { %>
                <% if(item.type == '主题产品') { %>
                <dd>
                    <div class="product-content">
                        <div style="background-image: url('<%= item.cover %>')"></div>
                        <P><%= item.title %></P>
                    </div>
                </dd>
                <% } %>
                <% }) %>
            </dl>
            <dl id="pro3">
                <dt>礼盒套装</dt>
                <% productList.forEach(function (item) { %>
                <% if(item.type == '礼盒套装') { %>
                <dd>
                    <div class="product-content">
                        <div style="background-image: url('<%= item.cover %>')"></div>
                        <P><%= item.title %></P>
                    </div>
                </dd>
                <% } %>
                <% }) %>
            </dl>
        </div>
    </div>
</div>
<style>
    .portfolio_main dt {
        font-size: 28px;
        font-weight: 600;
    }
    .portfolio_main dl {
        overflow: hidden;
    }
    .portfolio_main dd {
        float: left;
        margin: 15px;
    }
    .portfolio_main dd .product-content {
        width: 240px;
        height: 240px;
        overflow: hidden;
        position: relative;
    }
    .portfolio_main dd .product-content div {
        width: inherit;
        height: inherit;
        background-size: cover;
        background-position: center center;
        transition: all .5s;
    }
    .portfolio_main dd .product-content:hover div {
        transform: scale(1.3);
    }
    .portfolio_main dd p {
        position: absolute;
        bottom: 0;
        width: 100%;
        margin: 0;
        padding: 0;
        padding-left: 10px;
        overflow: hidden;
        background-color: rgba(0,0,0,.4);
        color: #fff;
        line-height: 2;
        font-size: 20px;
    }
</style>
<% include common/footer %>
